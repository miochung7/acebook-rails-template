<% if current_user %>
    <div class="card">
        <div class="card-body ">
            <div class="h5">@<%= current_user.username %></div>

            <!--profile pic-->
            <div class="mr-2">
                <img class="rounded-circle" width="90" src="https://picsum.photos/50/50" alt="profile-pic">
            </div>

            <div class="h7 text-muted">Name: <%= current_user.first_name %> <%= current_user.last_name %></div>
            <div class="h7">Email: <%= current_user.email %></div>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div class="h6 text-muted">Friends</div>
                <%= current_user.friendships.count + current_user.inverse_friends.count %>
            
            </li>
            <li class="list-group-item"> <%= link_to 'Edit', edit_user_path(current_user),class:"btn btn-primary btn-block" %>
           
            </li>

            <li class="list-group-item"><%= link_to "Log Out", logout_path, class:"btn btn-primary btn-block" %></li>
            
        </ul>
    </div>

<% end %>

